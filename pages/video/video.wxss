/* pages/video/video.wxss */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 120rpx;
}
.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 25rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.active{
  border-bottom: 3px solid red;
  /* transform: translateY(-20rpx); */
}
.navContent{
  /* border-bottom: 1px solid red; */
}
.videoItem{
  width: 95%;
  margin: 0 auto;
}
.videoItem video{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  margin-left: -5rpx;
}
.videoScroll {
  margin-top: 10rpx;
  /* calc: 可以动态计算css的宽高， 运算符左右两侧必须加空格，否则计算会失效 */
  /* 视口单位： vh vw  1vh = 1%的视口高度  1vw = 1%的视口宽度*/
  height: calc(100vh - 152rpx);
  /*height: calc(100vh - 100rpx); 用来测试页面上拉触底*/
}
.videoItem {
  padding: 0 3%;
}
