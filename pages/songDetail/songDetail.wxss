/* pages/songDetail/songDetail.wxss */
.songDetailContainer{
  height: 100%;
}
.bg{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: -99;
  /* opacity: .5; */
  filter: blur(2rpx);
  /* background-color: #000000; */
  /* opacity: .5; */
  width: 100%;
  height: 100%;
}
.bgaa{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: -98;
  /* opacity: .5; */
  /* filter: blur(2rpx); */
  background-color: #494949;
  opacity: .5;
  width: 100%;
  height: 100%;
}
.needle{
  z-index: 99;
  width: 172rpx;
  height: 254rpx;
  position: relative;
  left: 60rpx; 
  top: -40rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-30deg);
  transition: transform .5s linear;
}
.needleRotate{
  transform: rotate(-5deg);
  
}
.circle{
  /* left: 60rpx;  */

  position: relative;
  left: 10rpx;
  z-index: 1000;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: white;
  margin: 10rpx 0;
}
.discContainer{
  position: relative;
  top: -190rpx;
  width: 530rpx;
  height: 530rpx;

}
.left{
  margin-left: 40rpx;
}
.author{
  font-size: 30rpx;
  color: #4e4e4e;
}
.musicName{
  font-size: 35rpx;
  font-weight: bold;
}
.right text{
  font-size: 60rpx;
  margin-right: 40rpx;
}
.disc{
   width: 530rpx;
  height: 530rpx;
}
.musicImg{
  width: 330rpx;
  height: 330rpx;
  object-fit: cover;
  object-position: center;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.top{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.right{
  display: flex;
  align-items: center;
}
.middle{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.discAnimation{
  animation: disc 7s linear infinite;
  animation-delay: 0.5s;
}
@keyframes disc {
  from{
    transform:rotate(0deg);
  }
  to{
    transform:rotate(360deg);
  }
}
